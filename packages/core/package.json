{
  "private": true,
  "name": "@repo/core",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.js"
    },
    "./style.css": {
      "import": "./styled-system/styles.css",
      "require": "./styled-system/styles.css"
    }
  },
  "scripts": {
    "prepare": "panda codegen",
    "dev": "panda cssgen --outfile ./styled-system/styles.css -w",
    "build": "panda cssgen --outfile ./styled-system/styles.css && vite build && tsc",
    "lint": "eslint . --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@pandacss/dev": "0.42.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@storybook/react": "8.2.1",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "eslint": "9.3.0",
    "eslint-plugin-react-refresh": "0.4.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.5.3",
    "vite": "5.3.3"
  },
  "dependencies": {
    "@dkimura/github-package-sandbox": "0.0.4",
    "@repo/design-tokens": "workspace:^"
  }
}
